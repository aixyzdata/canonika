{
  "name": "beacon-tests",
  "version": "1.0.0",
  "description": "Testes BDD e TDD para o Beacon WebSocket Broker",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:bdd && npm run test:tdd",
    "test:bdd": "cucumber-js",
    "test:bdd:auth": "cucumber-js --profile authentication",
    "test:bdd:websocket": "cucumber-js --profile websocket",
    "test:bdd:events": "cucumber-js --profile events",
    "test:bdd:performance": "cucumber-js --profile performance",
    "test:bdd:integration": "cucumber-js --profile integration",
    "test:tdd": "npm run test:unit && npm run test:backend",
    "test:unit": "mocha tests/unit/*.test.js --timeout 10000",
    "test:backend": "pytest tests/unit/backend.test.py -v",
    "test:watch": "npm run test:bdd -- --watch",
    "test:parallel": "npm run test:bdd -- --parallel 4",
    "test:coverage": "nyc npm run test:tdd",
    "report": "open cucumber-report.html",
    "report:performance": "open performance-report.html",
    "report:integration": "open integration-report.html",
    "clean": "rm -rf cucumber-report.html cucumber-report.json performance-report.html integration-report.html coverage/",
    "setup": "npm install && pip install -r requirements.txt"
  },
  "dependencies": {
    "@cucumber/cucumber": "^9.0.0",
    "chai": "^4.3.7",
    "puppeteer": "^21.0.0",
    "cucumber-html-reporter": "^7.0.0",
    "sinon": "^15.0.0",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0"
  },
  "devDependencies": {
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "@types/chai": "^4.3.0",
    "@types/sinon": "^10.0.0",
    "@types/mocha": "^10.0.0"
  },
  "keywords": [
    "bdd",
    "tdd",
    "cucumber",
    "puppeteer",
    "mocha",
    "pytest",
    "testing",
    "beacon",
    "websocket",
    "canonika"
  ],
  "author": "Canonika Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "tests/**",
      "**/*.test.js",
      "**/*.test.py"
    ],
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "all": true
  }
} 